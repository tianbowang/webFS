{
  "name": "webfs",
  "displayName": "webFS",
  "description": "Enable VSCode to interact with browser storage customized file system",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "browser": "./dist/web/extension.js",
  "contributes": {
		"commands": [
      {
        "command": "webfs.helloWorld",
        "title": "Hello World"
      },
			{
				"command": "webfs.workspaceInit",
				"title": "Setup Workspace",
				"category": "WebFS"
			},
			{
				"command": "webfs.init",
				"title": "Create Files",
				"category": "WebFS"
			},
			{
				"command": "webfs.reset",
				"title": "Delete Files",
				"category": "WebFS"
			},
			{
				"command": "webfs.deleteFile",
				"title": "Delete \"file.txt\"",
				"category": "WebFS"
			},
			{
				"command": "webfs.addFile",
				"title": "Add \"file.txt\"",
				"category": "WebFS"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "webfs.init",
					"when": "workbenchState == workspace"
				},
				{
					"command": "webfs.reset",
					"when": "workbenchState == workspace"
				},
				{
					"command": "webfs.deleteFile",
					"when": "workbenchState == workspace"
				},
				{
					"command": "webfs.addFile",
					"when": "workbenchState == workspace"
				},
				{
					"command": "webfs.workspaceInit",
					"when": "workbenchState != workspace"
				}
			]
		}
	},
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts --fix",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "buffer": "*",
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.6",
    "@types/assert": "^1.5.10",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "mocha": "^10.3.0",
    "typescript": "^5.3.3",
    "@vscode/test-web": "^0.0.52",
    "ts-loader": "^9.5.1",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "@types/webpack-env": "^1.18.4",
    "assert": "^2.1.0",
    "process": "^0.11.10",
    "path": "*"

  }
}
